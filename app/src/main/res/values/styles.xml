<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="button_login">
        <item name="android:padding">@dimen/meia_margem</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textSize">21sp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:color"> @color/urucun_leve</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="create_account">
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/azul_cortina</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="AppTemaButton" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:padding">@dimen/meia_margem</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textSize">21sp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/primaryTextColor</item>
        <item name="android:background">@drawable/button_modelo</item>
    </style>

    <style name="ShapeAppearance.ItemGame.Card" parent="ShapeAppearance.MaterialComponents">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopLeft">0dp</item>
        <item name="cornerSizeTopRight">10dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
        <item name="cornerSizeBottomLeft">10dp</item>
    </style>

    <style name="ShapeAppearance.Sunflower.Button.Add" parent="ShapeAppearance.MaterialComponents">
        <item name="cornerFamily">rounded</item>

        <item name="cornerSizeTopLeft">0dp</item>
        <item name="cornerSizeTopRight">@dimen/button_corner_radius</item>
        <item name="cornerSizeBottomRight">0dp</item>
        <item name="cornerSizeBottomLeft">@dimen/button_corner_radius</item>
    </style>

    <style
        name="ShapeAppearance.Sunflower.FAB"
        parent="ShapeAppearance.MaterialComponents.SmallComponent" />

    <!-- Add plant button -->
    <dimen name="button_corner_radius">12dp</dimen>
</resources>